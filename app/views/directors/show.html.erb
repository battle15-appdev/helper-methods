<div>
  <div>
    <h1>
      Director #<%= @director.id%> details
    </h1>
  </div> 
    <div>
      <%= link_to "Go Back", directors_path%>
    </div>

    <div>
      <%= link_to "Edit movie", edit_director_path%>
    </div>

    <div>
      <%= link_to "Delete movie", director_path(@director), method: :delete %>
    </div>
</div>

<dl>
  <dt> 
    Name   
  </dt>
  <dd>
    <%= @director.name %>
  </dd>

    <dt> 
    DoB   
  </dt>
  <dd>
    <%= @director.dob %>
  </dd>

    <dt> 
    Bio  
  </dt>
  <dd>
    <%= @director.bio %>
  </dd>

  <dt> 
    Created at   
  </dt>
  <dd>
    <%= time_ago_in_words(@director.created_at) %> ago
  </dd>

  <dt> 
    Updated at  
  </dt>
  <dd>
    <%= time_ago_in_words(@director.updated_at) %> ago
  </dd>

</dl>