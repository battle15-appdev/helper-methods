<h1>Edit director</h1>

<% @director.errors.full_messages.each do |message| %>
  <p> style="color: red;"><%= message %> </p>
<% end %>

<%= form_with(model: @director, method: :patch) do |form|%>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name%>
  </div>

  <div>
    <%= form.label :dob %>
    <%= form.date_select :dob%>
  </div>

  <div>
    <%= form.label :bio %>
    <%= form.text_area :bio%>
  </div>

  <%= form.button "Edit director"%>
<% end %>